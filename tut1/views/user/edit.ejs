<form action="/user/update/<%= user.id %>" method="POST" class="form-singin">
	<h2>Hey, you editing a user...</h2>
	<input value="<%= user.name %>"  name="name" type="text" class="form-control"/>
	<input value="<%= user.title %>"  name="title" type="text" class="form-control"/>
	<input value="<%= user.email %>"  name="email" type="text" class="form-control"/>
	<input value="Proceed"  type="submit" class="btn btn-primary btn-block btn-lg"/>
	<input type="hidden" name="_csrf" value="<%= _csrf%>" />
</form>
